<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Robotron 2000</title>

    <style>
        /* CSS dentro do mesmo arquivo */
        body {
            text-align: center;
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 20px;
        }

        .container {
            margin-top: 40px;
        }

        button {
            font-size: 20px;
            padding: 10px 15px;
            margin: 10px;
            cursor: pointer;
            border-radius: 6px;
            border: none;
            background-color: #ddd;
        }

        button:hover {
            background-color: #ccc;
        }

        img {
            width: 300px;
            height: auto;
        }
    </style>
</head>

<body>

    <h1>Mudar Cor do Robotron</h1>
    <p>Clique nos botões para trocar a cor:</p>

    <div class="container">
        <button id="btn-prev"><<</button>

        <img id="robotron-img" src="img/robotron-rosa.png" alt="Robotron">

        <button id="btn-next">>></button>
    </div>

    <script>
        // JavaScript dentro do mesmo arquivo

        // Lista com as imagens do robotron
        const imagens = [
            "img/robotron-rosa.png",
            "img/robotron-amarelo.png",
            "img/robotron-azul.png",
            "img/robotron-preto.png",
            "img/robotron-vermelho.png",
            "img/robotron-branco.png"
        ];

        // Seleciona a imagem e os botões
        const imgElement = document.getElementById("robotron-img");
        const btnPrev = document.getElementById("btn-prev");
        const btnNext = document.getElementById("btn-next");

        // Índice inicial da imagem
        let indiceAtual = 0;

        // Atualiza imagem
        function atualizarImagem() {
            imgElement.src = imagens[indiceAtual];
        }

        // Botão <<
        btnPrev.addEventListener("click", () => {
            if (indiceAtual === 0) {
                indiceAtual = imagens.length - 1;
            } else {
                indiceAtual--;
            }
            atualizarImagem();
        });

        // Botão >>
        btnNext.addEventListener("click", () => {
            if (indiceAtual === imagens.length - 1) {
                indiceAtual = 0;
            } else {
                indiceAtual++;
            }
            atualizarImagem();
        });
    </script>

</body>
</html>
